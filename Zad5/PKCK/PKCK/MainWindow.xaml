<Window x:Class="PKCK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PKCK"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="814.4">
    <Grid>
        <ComboBox ItemsSource="{Binding}" x:Name ="ComboBoxPastwiska" DisplayMemberPath="Nazwa"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="238" Margin="157,47,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Dodaj owcę" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,49,0,0" TextWrapping="Wrap" Text="Pastwisko:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,77,0,0" TextWrapping="Wrap" Text="Imię:" VerticalAlignment="Top"/>
        <TextBox x:Name ="Imie" HorizontalAlignment="Left" Height="23" Margin="158,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,105,0,0" TextWrapping="Wrap" Text="Data urodzenia:" VerticalAlignment="Top"/>
        <TextBox  x:Name ="Data" HorizontalAlignment="Left" Height="23" Margin="157,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="11,136,0,0" TextWrapping="Wrap" Text="Płeć:" VerticalAlignment="Top"/>
        <ComboBox x:Name ="Plec" HorizontalAlignment="Left" Margin="157,130,0,0" VerticalAlignment="Top" Width="238">
            <ComboBoxItem>k</ComboBoxItem>
            <ComboBoxItem>m</ComboBoxItem>
        </ComboBox>
        <TextBox  x:Name ="Waga" HorizontalAlignment="Left" Height="23" Margin="158,157,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox  x:Name ="DlugoscRuna" HorizontalAlignment="Left" Height="23" Margin="554,46,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="12,161,0,0" TextWrapping="Wrap" Text="Waga:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="410,48,0,0" TextWrapping="Wrap" Text="Długość runa:" VerticalAlignment="Top"/>
        <ComboBox x:Name ="WagaJednostka" HorizontalAlignment="Left" Margin="282,158,0,0" VerticalAlignment="Top" Width="113">
            <ComboBoxItem>kg</ComboBoxItem>
            <ComboBoxItem>dkg</ComboBoxItem>
            <ComboBoxItem>funt</ComboBoxItem>
        </ComboBox>
        <ComboBox x:Name ="DlugoscJednostka" HorizontalAlignment="Left" Margin="679,44,0,0" VerticalAlignment="Top" Width="113">
            <ComboBoxItem>mm</ComboBoxItem>
            <ComboBoxItem>cm</ComboBoxItem>
            <ComboBoxItem>cal</ComboBoxItem>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="410,79,0,0" TextWrapping="Wrap" Text="Opis:" VerticalAlignment="Top"/>
        <TextBox  x:Name ="Opis" HorizontalAlignment="Left" Height="23" Margin="554,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
        <TextBox  x:Name ="SzybkoscMarszu" HorizontalAlignment="Left" Height="23" Margin="554,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox  x:Name ="SzybkoscTrawy" HorizontalAlignment="Left" Height="23" Margin="554,133,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name ="SzybkoscMarszuJednostka" HorizontalAlignment="Left" Margin="679,105,0,0" VerticalAlignment="Top" Width="113">
            <ComboBoxItem>ms</ComboBoxItem>
            <ComboBoxItem>kms</ComboBoxItem>
            <ComboBoxItem>kmh</ComboBoxItem>
        </ComboBox>
        <ComboBox  x:Name ="SzybkoscTrawyJednostka"  HorizontalAlignment="Left" Margin="679,132,0,0" VerticalAlignment="Top" Width="113">
            <ComboBoxItem>talerzmin</ComboBoxItem>
            <ComboBoxItem>miskamin</ComboBoxItem>
            <ComboBoxItem>wiadroh</ComboBoxItem>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="410,107,0,0" TextWrapping="Wrap" Text="Szybkość marszu:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="410,139,0,0" TextWrapping="Wrap" Text="Szybkość zjadania trawy:" VerticalAlignment="Top"/>
        <Button Content="Dodaj owcę" HorizontalAlignment="Left" Margin="410,161,0,0" VerticalAlignment="Top" Width="382" Click="DodajOwce"/>
    </Grid>
</Window>
